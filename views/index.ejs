<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Crime Scene Essentials</title>
    <!-- Google Material Icons -->
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/icon?family=Material+Icons"
    />
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <h1>Crime Scene Essentials</h1>
    <p><strong>INVENTORY MANAGEMENT APP</strong></p>

    <div class="container">
      <button class="add-btn" onclick="window.location.href='/add-category'">
        <span class="material-icons">add</span> Add Category
      </button>

      <% if (categories && categories.length > 0) { %> <%
      categories.forEach(category => { %>
      <div
        class="category-banner"
        onclick="window.location.href='/<%= category.name %>'"
      >
        <span><%= category.name %></span>
        <div class="btn-group">
          <button
            class="btn edit-btn"
            title="Edit Category"
            onclick="event.stopPropagation(); window.location.href='/<%= category.name %>/edit'"
          >
            <span class="material-icons">edit</span>
          </button>
          <button
            class="btn delete-btn"
            title="Delete Category"
            onclick="event.stopPropagation(); window.location.href='/<%= category.name %>/delete'"
          >
            <span class="material-icons">delete</span>
          </button>
        </div>
      </div>
      <% }); %> <% } else { %>
      <p>No categories available.</p>
      <% } %>
    </div>
  </body>
</html>
